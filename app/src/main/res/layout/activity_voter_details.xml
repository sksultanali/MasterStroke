<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:padding="5dp"
    tools:context=".Activities.VoterDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_5mdp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/surveyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/click_effect_back"
                android:text="Survey"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/slip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/click_effect_back"
                android:text="Slip"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/bg_green_corner"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/click_effect_back"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_weight="1"
                android:background="@drawable/click_effect_back"
                android:text="Other"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10mdp"
            android:background="@drawable/bg_white_color_corner8"
            android:elevation="@dimen/_3mdp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name : Person Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/serialNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Sl No : NA"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/voterId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="VoterId : XYZ456454A"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />

            <TextView
                android:id="@+id/partGenderAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Part : 1  |  Gender : Male  |  Age : 81"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Address : Chaltabagan, Vivekananda Road, Kolkata, WB - 7000006"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_10mdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/houseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:text="House No : A12/522"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:text="Section : A12/522"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/boothName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:text="Booth Name : YMCA College Kolkata"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/old_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:drawableTint="@color/icon_color"
                android:text="Old Mobile No : 9876543210 |  8978564523"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:drawableTint="@color/icon_color"
                android:drawablePadding="@dimen/_5mdp"
                android:drawableEnd="@drawable/edit_24"
                android:text="Mobile No : 9876543210 |  8978564523"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:drawableTint="@color/icon_color"
                android:drawablePadding="@dimen/_5mdp"
                android:drawableEnd="@drawable/edit_24"
                android:text="DOB : __ /__ / ____"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/doa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:drawableTint="@color/icon_color"
                android:drawablePadding="@dimen/_5mdp"
                android:drawableEnd="@drawable/edit_24"
                android:text="DOA : __ /__ / ____"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:id="@+id/newAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:visibility="gone"
                android:text="New Address : NA"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp"
                android:text="Language : "
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/_12font_mdp" />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/bangla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Bengali"/>
                <RadioButton
                    android:id="@+id/hindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hindi"/>
                <RadioButton
                    android:id="@+id/none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>