                    android:textSize="@dimen/_22font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/edTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2mdp"
