<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgm"
    android:gravity="center"
    android:padding="@dimen/_5mdp"
    tools:context=".Activities.StatPageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14font_mdp"
        android:text="Daily Highlights"
        android:layout_marginStart="@dimen/_5mdp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5mdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/meetLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/meeting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:gravity="center"
                    android:text="Meeting Schedule"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/meetingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slipLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/scrutiny" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:gravity="center"
                    android:text="Voter Slip"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/slipNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/survey_a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:gravity="center"
                    android:text="Total Scrutiny"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/editNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/birthLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/birthday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:gravity="center"
                    android:text="Today Birthday"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/birthNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/telephone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:gravity="center"
                    android:text="Phone No Updated"
                    android:textSize="@dimen/_12font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_16font_mdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:background="@drawable/back_border_gray"
            android:elevation="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12mdp"
            android:paddingTop="@dimen/_15mdp"
            android:paddingEnd="@dimen/_12mdp"
            android:paddingBottom="@dimen/_15mdp"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_24mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:src="@drawable/survey_a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:gravity="center"
                    android:text="Survey Done"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_18font_mdp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_5mdp"
        android:layout_gravity="end"
        android:text="Next"/>
<!--    <Button-->
<!--        android:id="@+id/btnAuthFail"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="@dimen/_10mdp"-->
<!--        android:layout_marginEnd="@dimen/_5mdp"-->
<!--        android:layout_gravity="end"-->
<!--        android:text="Next"/>-->

</LinearLayout>