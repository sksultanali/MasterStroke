<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="@dimen/_5mdp"
    tools:context=".Activities.StatPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_green_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="Phone Added"
                android:textColor="@color/white"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_blue_purple_corners"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="Scrutney Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_orange_corners_round"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="HOF Updated"
                android:textColor="@color/white"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_main_color_corner8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="Language Updated"
                android:textColor="@color/white"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_icon_color_corner8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center"
                android:text="Religion Updated"
                android:textColor="@color/white"
                android:textSize="@dimen/_11font_mdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5mdp"
            android:background="@drawable/bg_dark_yellow"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_18font_mdp"
                android:textColor="@color/black"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_11font_mdp"
                android:textColor="@color/black"
                android:text="Survey Done"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>